@import url('https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=PT+Sans:wght@400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap');
font-size = 16px
border-ronded = 1.25rem
border-dashed = 2px dashed rgba(97,144,62,1)
red = #d63031
brow = #5a4d28
blue = #18507b
green = #61903e
.form-control
    &:focus
    &:active
        outline none!important
        box-shadow none!important
.logo
    z-index 10
.text-shadow
    text-shadow: 2px 2px 6px #42424287;
.roboto-Slab
    font-family: 'Roboto Slab', serif;
.alfa-slab
    font-family: 'Alfa Slab One', cursive;
.bg-red
    background-color red
.text-red
    color red
.text-brow
    color brow
.amatic-font
    font-family: 'Amatic SC', cursive;
html, body
    font font-size 'PT Sans', sans-serif!important
    color #565656!important
div
    transition .3s ease-all
.text-green
    color #61903e!important
.navbar-nav li a
    color white!important
.priority-box
    min-height 320px
    border-radius border-ronded
.product-box 
    min-height 500px!important
    &:last-child
        margin 20px 0
        min-height 460px
.border-dashed
    border border-dashed
.border-rounded 
    border-radius border-ronded
.border-overlay
    width 100%
    height 100%
    background transparent
    position absolute
    border-radius 20px
    position absolute
    top -20px
    left -20px
    border 2px dashed rgba(0,0,0,.2)
header
    background red
    nav
        background transparent
footer
    background red
    color white
    padding 4rem 0 2rem 0
    position relative
.mexico-border
    position absolute
    background-image url('../img/homepage/mexico-border.png')
    width 100%
    height 20px
    top 10px
.follow-us
    width 30%
    border-color white!important
ul.social-network
    padding 0
    margin 0
    li
        display inline-block
        margin 0.2rem .765rem 0
        text-decoration none
        list-style none
        &:last-child
            margin-right 0
        a
            color: white
.taqueria-section
    font-family: 'Caveat Brush', cursive;
    h2
        color #61903e
        line-height 44px
.catering
    h2
        font-family: 'Pacifico', cursive;        
.subtitle-meat
    background-color red
    margin 1rem auto 0 auto
form button[type=submit]
    background-color blue
    font-weight bold
    color white
    &:hover
        color white
        background-color #1b5b8c
ul.info
        float left
        list-style none
        padding 14px 0
        margin 0
        li
            display inline-block
            padding 0 10px
            color white
            li.language
            a
                font-weight bold
                color white
@media screen and (min-width: 1200px)
    .logo img
        width initial!important;
    .navbar
        padding-left 240px!important
        float left
    ul.info li
        .fa-2x
            font-size 2em!important
        h6
            font-size initial!important
    ul.navbar-nav li a
        padding 20px 14px!important
        font-weight bold

@media screen and (min-width: 992px)
    .logo img
        width 200px;
    h2
        font-size 68px!important
    .catering p, .latin-products
        font-size 32px
    .latin-products h2
        line-height 64px
    .navbar
        padding-left 200px!important
        float left
    ul.info li
        .fa-2x
            font-size 1em
        h6
            font-size .8rem
    ul.navbar-nav li a
        padding 20px 6px
        font-weight bold

@media screen and (max-width: 992px)
    .navbar-brand
        width 180px;
    .taqueria-section
        h2
            line-height 26px
    .latin-products h2
        line-height 32px
    .priority-box
        min-height 200px
        .fa-5x
            font-size: 3em
    .product-box
        min-height 400px!important
    .follow-us
        width 50%

@media screen and (max-width: 767px)
    ul.info
        margin 0 -40px 0
        padding 0
        li
            padding 0 2px 0
        h6
            font-size .9em
    .display-2
        font-size 3.5rem!important
    .product-box
        min-height 300px!important
    .meat-box
        height 100%
    .follow-us
        width 100%
    .zmdi-hc-2x
        font-size 1.4em!important

@media screen and (max-width: 640px)
    ul.info 
        li
            .fal
                display none

@media screen and (max-width: 575px)
    .priority-box
        min-height auto
        margin-bottom 1rem
    ul.info li
        &:nth-child(1)
            position absolute;
            top 32px;
            right 60px;
        &:nth-child(2), &:nth-child(3)
            display none